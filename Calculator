print(''' + ADD - SUB * MUL / DIVIDE ''')

num1 = int(input("Enter the first value = "))
num2 = int(input("Enter the second value = "))
opr = input("Enter the operator = ")
if opr == "+":
    print(num1 + num2)
elif opr == "*":
     print(num1*num2)
elif opr == "-":
    print(num1-num2)
elif opr == "%"   :
    print(num1%num2) 
elif opr == "/":
    if num2 == 0:
        print("invalid")
    else:
        print(num1/num2)
else:
    print("invalid opr...")
